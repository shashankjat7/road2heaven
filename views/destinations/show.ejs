<%include ../partials/header.ejs%>
<div class="container"> 
		<div class="row">
			<div class="col-md-3">
				<p class="lead">road2heaven</p>
				<div class="list-group">
					<li class="list-group-item active">info1</li>
					<li class="list-group-item">info2</li>
					<li class="list-group-item">info3</li>
				</div>
				
			</div>
			<div class="col-md-9">
				<div class="thumbnail">
					<img src="<%=destination.image%>%>" class="img-responsive "style="object-fit: cover;width: 100%;">
					<div class="caption">
						<h4><a href=""><%= destination.name%></a></h4>
						<p><%=destination.description%></p>
						<p>
							<em>Submitted by <%=destination.author.username%></em>
						</p>
					</div>
					
				</div>
				<div class="well">
					<div class="text-right"><a class="btn btn-success" href="/destinations/<%=destination._id%>/comments/new">Leave a Comment</a>
					</div>
					<hr>
					<%destination.comments.forEach(function(comment){%>
					<div class="row">
						<div class="col-md-12">
							<strong><%=comment.author.username%></strong>
							<span class="pull-right">10 days ago</span>
							<p><%=comment.text%></p>
						</div>
					</div>
					<%})%>
				</div>
			</div>
		</div>
</div>



<%include ../partials/footer.ejs%>